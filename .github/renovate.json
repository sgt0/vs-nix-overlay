{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableDependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "* 0-4,22-23 * * 1-5",
      "* * * * 0,6"
    ],
    "commitMessagePrefix": "flake:",
    "commitMessageTopic": "lock file maintenance",
    "commitMessageAction": null,
    "commitMessageExtra": null,
    "commitMessageSuffix": null
  },
  "nix": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "extends": [
        ":semanticCommitScopeDisabled",
        ":semanticCommitTypeAll(ci)"
      ]
    },
    {
      "matchFileNames": [
        "pkgs/**"
      ],
      "commitMessagePrefix": "{{{parentDir}}}:",
      "commitMessageAction": null,
      "commitMessageTopic": "{{{displayFrom}}}",
      "commitMessageExtra": "-> {{{displayTo}}}",
      "commitMessageSuffix": null
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^pkgs/.+/default.nix$/"
      ],
      "matchStrings": [
        "version\\s*=\\s*\"(?<currentValue>.*?)\";",
        "datasource=(?<datasource>\\S+)",
        "depName=(?<depName>\\S+)",
        "extractVersion=(?<extractVersion>\\S+)"
      ],
      "matchStringsStrategy": "combination",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}"
    }
  ]
}
